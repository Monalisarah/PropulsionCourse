package person_Pet;

public class Main {

	public static void main(String[] args) {
		
		Person simona = new Person("Simona", "MÃ¼hlebach", 30);
		Pet cat = new Pet("Garfield");
		Pet dog = new Pet("Lassie");
		Pet dog2 = new Pet("Fido");
		
		simona.addPet(cat);
		simona.addPet(dog);
		simona.addPet(dog2);
		
		
		// print fields seperatly
		System.out.println(simona.getFirstName());
		System.out.println(simona.getLastName());
		System.out.println(simona.getAge());
		
		// change properties
		simona.setFirstName("Susan");
		simona.setLastName("Meier");
		simona.setAge(60);
		System.out.println(simona.getFirstName());
		
//		System.out.println(person.firstName);
		
		//print toString
		System.out.println(simona.toString());
		System.out.println(simona.getName());
	}
}
