package Bank;



public class Customer {
	
	//fields
	protected final String name;
	protected final String id = java.util.UUID.randomUUID().toString();
	protected Account account;

	//constructor
	protected Customer(String name, Account account){
		this.name = name;
		this.account = account;
	}

	//getters and setters
	public Account getAccount() {
		return this.account;
	}
	public void setAccount(Account account) {
		this.account = account;
	}
	public String getName() {
		return this.name;
	}
	public String getId() {
		return this.id;
	}

	

	// toString
	@Override
	public String toString() {
		return "Customer [name=" + this.name + ", id=" + this.id + ", accountbalance=" +(this.account == null? "null": this.account.balance) + "]";
	}


	

}
