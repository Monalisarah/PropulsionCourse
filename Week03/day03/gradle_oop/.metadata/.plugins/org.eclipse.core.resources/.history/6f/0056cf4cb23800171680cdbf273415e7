package person_Pet;

public class Main {

	public static void main(String[] args) {
		
		Person simona = new Person("Simona", "MÃ¼hlebach", 30);
		Pet cat = new Cat(PetType.CAT, "Garfield");
		Pet dog = new Dog(PetType.DOG, "Lassie");
		Pet bird = new Bird(PetType.BIRD, "Fido");
		
		simona.addPet(cat);
		simona.addPet(dog);
		simona.addPet(bird);
		
		
		// print fields seperatly
		System.out.println(simona.getFirstName());
		System.out.println(simona.getLastName());
		System.out.println(simona.getAge());
		
		// change properties
		simona.setFirstName("Susan");
		simona.setLastName("Meier");
		simona.setAge(60);
		System.out.println(simona.getFirstName());
		
//		System.out.println(person.firstName);
		
		//print toString
		System.out.println(simona);
		System.out.println(simona.getName());
		
		Asiat asiat = new Asiat("Li", "Sun Choo", 25);
		System.out.println(asiat);
	}
}
